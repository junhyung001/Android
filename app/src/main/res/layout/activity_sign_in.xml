<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scenarios.signin.SignInActivity">


    <ImageView
        android:id="@+id/iv_signIn_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tv_signIn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/iv_signIn_logo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/edt_signIn_username"
        android:hint="Username"
        android:textSize="18dp"
        android:textColor="#99FF99"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_signIn_title"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edt_signIn_password"
        android:hint="Password"
        android:textSize="18dp"
        android:textColor="#339933"
        android:inputType="numberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/edt_signIn_username"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_signIn_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ForgetPassword"
        android:textColor="#339933"
        app:layout_constraintTop_toBottomOf="@id/edt_signIn_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="40dp"/>

    <Button
        android:id="@+id/btn_singIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="LOGIN"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_signIn_text"
        android:textStyle="bold"
        android:background="#339933"/>

    <LinearLayout
        android:id="@+id/ll_singIn_SingUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_singIn">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have account?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Create a new account"
            android:textColor="#339933"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>